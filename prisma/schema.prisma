generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  tickets   Ticket[]
  tags      Tag[]

  @@map("users")
}

model Tag {
  id          String   @id @default(uuid())
  description String
  color       String
  createdAt   DateTime @default(now())
  order       Int      @default(1)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticket      Ticket[]

  @@map("tags")
}

model Ticket {
  id          String    @id @default(uuid())
  description String
  done        Boolean   @default(false)
  date        DateTime?
  createdAt   DateTime  @default(now())
  order       Int       @default(1)
  userId      String
  tagId       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tag  Tag? @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@map("tickets")
}
